<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import merp.controls.IntegerTextField?>
<GridPane fx:controller="merp.NewCharacterController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="nameField"
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Defencive Bonus:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <IntegerTextField fx:id="dbField"
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Armour:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <ComboBox fx:id="armour"
              GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Shield:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <CheckBox fx:id="hasShield" selected="false"
               GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Attacks:"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <ListView fx:id="attackView" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Button text="Add..." GridPane.columnIndex="2" GridPane.rowIndex="5" onAction="#addAttack" />

    <Button
        GridPane.columnIndex="1" GridPane.rowIndex="7" text="Save" onAction="#doCreateCharacter" />

    <Label text=""
           GridPane.columnIndex="0" GridPane.rowIndex="8"/>

</GridPane>